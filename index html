<script>
const text = [
  "Hey Lilian üíñ",
  "Merry Christmas üéÑ‚ú®",
  "I made this just for you‚Ä¶",
  "Having you in my life feels like a beautiful blessing ü§ç",
  "You mean more to me than words can explain‚Ä¶"
];

let i=0, j=0;
const typingDiv = document.getElementById("typing");
const btn = document.getElementById("btn");
const final = document.getElementById("final");

function type(){
  if(i < text.length){
    if(j < text[i].length){
      typingDiv.innerHTML += text[i][j];
      j++;
      setTimeout(type,50);
    }else{
      typingDiv.innerHTML += "<br><br>";
      j=0; i++;
      setTimeout(type,500);
    }
  }
}

btn.onclick = ()=>{
  btn.style.display="none";
  type();
  setTimeout(()=>{
    typingDiv.style.display="none";
    final.style.display="block";
    hearts();
  },9000);
};

function hearts(){
  for(let i=0;i<40;i++){
    const h=document.createElement("div");
    h.className="heart";
    h.innerHTML="‚ù§Ô∏è";
    h.style.left=Math.random()*100+"%";
    h.style.fontSize=12+Math.random()*30+"px";
    h.style.animationDuration=3+Math.random()*5+"s";
    document.body.appendChild(h);
  }
}
</script>

